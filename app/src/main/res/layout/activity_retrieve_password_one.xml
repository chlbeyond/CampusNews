<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_login_bg"
    android:onClick="true"
    android:id="@+id/retrieve1">
    <include layout="@layout/layout_nav_a"/>

    <LinearLayout
        android:id="@+id/care_list"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/personal_data_white"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入注册的手机号码"
            android:inputType="phone"
            android:layout_marginTop="63dp"
            android:textSize="16sp"
            android:textColor="#393D44"/>
        <EditText
            android:id="@+id/mobilePhone"
            android:layout_width="269dp"
            android:layout_height="42dp"
            android:digits="1234567890"
            android:maxLength="11"
            android:gravity="center"
            android:inputType="number"
            android:layout_marginTop="79dp"
            android:background="@drawable/edit_retrieve"
            android:textColorHint="#C7C7CD"/>
        <TextView
            android:id="@+id/register_the_next_step1"
            android:layout_width="269dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/retrieve_password"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
    <com.example.chl.campusnews.View.MyProgressBar
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_marginTop="-700dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>