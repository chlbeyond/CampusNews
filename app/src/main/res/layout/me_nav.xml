<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/friend_linear"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="18dp">

        <TextView
            android:id="@+id/friend_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的新鲜事"
            android:textColor="#59BAFB"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/friend_text_underline"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#63BEFB" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/follow_linear"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="18dp">

        <TextView
            android:id="@+id/follow_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的回答"
            android:textColor="#434343"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/follow_text_underline"
            android:layout_width="match_parent"
            android:layout_height="3dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fans_linear"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="18dp">

        <TextView
            android:id="@+id/fans_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的提问"
            android:textColor="#434343"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/fans_text_underline"
            android:layout_width="match_parent"
            android:layout_height="3dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/collection_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="18dp">

        <TextView
            android:id="@+id/collection_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:textColor="#434343"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/collection_text_underline"
            android:layout_width="match_parent"
            android:layout_height="3dp" />
    </LinearLayout>
</LinearLayout>
