<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.example.chl.campusnews.Activity.SearchActivity">

    <include layout="@layout/search_edit_layout" />

    <TextView
        android:id="@+id/unsearch_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="未搜索到内容"
        android:textColor="#868686"
        android:textSize="16sp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/search_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="搜索指定内容"
            android:textColor="#808080"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/news_tv"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="新鲜事"
                android:textColor="#5BB9FC"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="22dp"
                android:background="#E6E6E6" />

            <TextView
                android:id="@+id/club_tv"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="社团活动"
                android:textColor="#5BB9FC"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="22dp"
                android:background="#E6E6E6" />

            <TextView
                android:id="@+id/ask_tv"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="你问我答"
                android:textColor="#5BB9FC"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
